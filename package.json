{
  "name": "cliyargs",
  "version": "2.0.0",
  "description": "Helpers to build cli apps using yargs",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "test": "jest --runInBand --forceExit --verbose --useStderr --detectOpenHandles",
    "test:cov": "yarn test --coverage",
    "prepublishOnly": "yarn build",
    "watch": "yarn build --watch",
    "tscheck": "tsc --noEmit"
  },
  "author": "Ikenna Agbasimalo <michfx@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.36",
    "@types/yargs": "^16.0.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^7.3.3",
    "typescript": "^4.2.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "mock-argv": "^1.1.11",
    "mock-stdin": "^1.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1"
  },
  "keywords": [
    "cli",
    "command line",
    "yargs",
    "command line app"
  ],
  "bugs": {
    "email": "michfx@gmail.com",
    "url": "https://github.com/ikmich/cliyargs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikmich/cliyargs"
  },
  "maintainers": [
    "Ikenna Agbasimalo <michfx@gmail.com>"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 2
  }
}
